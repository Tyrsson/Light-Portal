{
  "require": {
    "php": "~8.0",
    "ext-dom": "*",
    "ext-intl": "*",
    "ext-simplexml": "*",
    "ext-zip": "*",
    "bugo/smf-compat": "^0.1.4",
    "laminas/laminas-loader": "^2.9",
    "latte/latte": "^3.0"
  },
  "require-dev": {
    "mockery/mockery": "^1.5",
    "nette/tester": "^2.5",
    "scssphp/scssphp": "^1.12",
    "wikimedia/less.php": "^4.1"
  },
  "autoload-dev": {
    "psr-4": {
      "Tests\\": "Tests/"
    }
  },
  "config": {
    "vendor-dir": "Libs",
    "optimize-autoloader": true,
    "preferred-install": "dist",
    "sort-packages": true
  },
  "scripts": {
    "post-update-cmd": "@php create_index.php",
    "tests": "@php Libs/bin/tester --colors 1 Tests -C"
  }
}
