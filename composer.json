{
  "autoload": {
    "psr-4": {
      "Bugo\\LightPortal\\": "src\\Sources\\LightPortal"
    }
  },
  "require": {
    "php": "^8.0",
    "ext-dom": "*"
  },
  "require-dev": {
    "rector/rector": "^0.17",
    "phing/phing": "2.*"
  },
  "scripts": {
    "check": "vendor/bin/rector process --dry-run --clear-cache",
    "mix": [
      "pnpm update",
      "pnpm run build"
    ],
    "up": [
      "cd src/Sources/LightPortal && composer update",
      "composer update"
    ],
    "build": [
      "vendor/bin/phing"
    ]
  }
}
